#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define TAM 14
#define COR 6

typedef struct {
	
	int i;
	int j;
	int tab[TAM][TAM];
	
} Param;

void tabuleiro (Param a) {

	srand( (unsigned)time(NULL) );

	for(a.i = 0; a.i < TAM; a.i++) {
		for(a.j = 0; a.j < TAM; a.j++) {
			a.tab[a.i][a.j] = rand() % COR;
		}
	}
	
//generates random numbers in the [0,5] interval and sets them to each position in the matrix

}

void imprime (Param a) {



	for(a.i = 0; a.i < TAM; a.i++) {
		for(a.j = 0; a.j < TAM; a.j++) {
			printf("%i ", a.tab[a.i][a.j]);
		}
	printf("\n");
	}
}


//prints each element to the screen and then, when i's value increases, prints a line break to give the matrix its form

int main () {
	
	Param valor = {0 , 0};	
	
	tabuleiro(valor, tab);
	
	/*typedef enum {
		VERMELHO,
		AZUL,
		AMARELO,
		VERDE,
		ROSA,
		ROXO
	};*/
		
	imprime(valor, tab);
	
	return 0;
}
